{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-B", "build", "-DCMAKE_BUILD_TYPE=Debug"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--target", "VST3MCPWrapper"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--target", "VST3MCPWrapper", "--clean-first"],
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
